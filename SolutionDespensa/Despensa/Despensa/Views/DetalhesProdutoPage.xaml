<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Despensa.Views.DetalhesProdutoPage"
               Title="Despensa - Produto"
             BackgroundColor="#e0e0e0">

    <StackLayout Orientation="Vertical" Spacing="30" Padding="0,10,0,0">
        <Image HorizontalOptions="Center"
                    VerticalOptions="Center" 
                    HeightRequest="200"
                    WidthRequest="200"
                   Source="produtoImg.png" 
                   Aspect="AspectFill"/>
        <Frame OutlineColor="#caa052" VerticalOptions="FillAndExpand">
            <StackLayout>
                <Label Text="Item" TextColor="Black"/>
                <Label Text="{Binding Nome}" TextColor="Gray"/>
                <Label Text="Categoria" TextColor="Black"/>
                <Label Text="{Binding Categoria.Nome}" TextColor="Gray"/>
                <Label Text="Marca" TextColor="Black"/>
                <Label Text="{Binding Marca}" TextColor="Gray"/>
                <Label Text="Status" TextColor="Black"/>
                <Label Text="{Binding Status}" TextColor="Gray"/>
                <Label Text="Detalhes" TextColor="Black"/>
                <Label Text="{Binding Detalhes}" TextColor="Gray"/>
            </StackLayout>
        </Frame>
    </StackLayout>
</ContentPage>