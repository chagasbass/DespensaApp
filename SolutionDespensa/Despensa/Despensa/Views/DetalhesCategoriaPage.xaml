<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Despensa.Views.DetalhesCategoriaPage" 
             Title="Despensa - Categoria"
             BackgroundColor="#e0e0e0">
    <StackLayout Orientation="Vertical">
        <Image HorizontalOptions="Center"
                   VerticalOptions="Center" 
                   Source="categoriaImg.png" 
                   Aspect="AspectFill"></Image>
        <TableView Intent="Form">
            <TableRoot>
                <TableSection Title="Informações">
                    <TextCell Text="{Binding Nome}"></TextCell>
                    <EntryCell Text="{Binding Informacao}" IsEnabled="True"></EntryCell>
                    <TextCell Text="{Binding DataCadastro}"></TextCell>
                </TableSection>
            </TableRoot>
        </TableView>
    </StackLayout>
</ContentPage>