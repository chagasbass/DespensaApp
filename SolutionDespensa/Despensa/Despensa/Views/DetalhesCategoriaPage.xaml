<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Despensa.Views.DetalhesCategoriaPage" 
             Title="Despensa - Categoria"
             BackgroundColor="#e0e0e0">
    <StackLayout Orientation="Vertical" Spacing="30" Padding="0,10,0,0">
        
        <Image HorizontalOptions="Center"
                    VerticalOptions="Center" 
                    HeightRequest="200"
                    WidthRequest="200"
                   Source="categoriaImg.png" 
                   Aspect="AspectFill"/>
        <Frame OutlineColor="#caa052" VerticalOptions="FillAndExpand">
        <StackLayout VerticalOptions="Center" HorizontalOptions="Center">
            <Label Text="Categoria" TextColor="Black"/>
            <Label Text="{Binding Nome}" TextColor="Gray"/>

            <Label Text="Informações" TextColor="Black"/>
            <Label Text="{Binding Informacao}" TextColor="Gray"/>
        </StackLayout>
        </Frame>

    </StackLayout>
</ContentPage>