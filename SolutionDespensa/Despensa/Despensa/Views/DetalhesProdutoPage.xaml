<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Despensa.Views.DetalhesProdutoPage"
               Title="Despensa - Produto"
             BackgroundColor="#e0e0e0">
    <StackLayout Orientation="Vertical">
        <Image HorizontalOptions="Center"
                   VerticalOptions="Center" 
                   Source="produtoImg.png" 
                   Aspect="AspectFill"></Image>
        <TableView Intent="Form">
            <TableRoot>
                <TableSection Title="Informações">
                    <TextCell Text="{Binding Nome}"></TextCell>
                    <TextCell Text="{Binding Marca}"></TextCell>
                    <TextCell Text="{Binding Status}"></TextCell>
                    <TextCell Text="{Binding Detalhes}"></TextCell>
                </TableSection>
            </TableRoot>
        </TableView>
    </StackLayout>
</ContentPage>